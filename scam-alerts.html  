.header { padding: 50px 20px 20px; background: rgba(15, 23, 42, 0.8); backdrop-filter: blur(20px); border-bottom: 1px solid rgba(239, 68, 68, 0.3); position: sticky; top: 0; z-index: 100; display: flex; align-items: center; gap: 15px; }
.live-dot { height: 10px; width: 10px; background-color: var(--danger); border-radius: 50%; display: inline-block; animation: blink 1.2s infinite; box-shadow: 0 0 10px var(--danger); }
