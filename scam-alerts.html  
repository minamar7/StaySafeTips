<body>

<header class="header">
    <a href="index.html" class="back-btn">←</a>
    <div>
        <h1 style="font-size: 20px; margin: 0;">Live Alerts</h1>
        <div style="font-size: 11px; color: var(--danger); font-weight: bold;"><span class="live-dot"></span> ΑΥΤΟΜΑΤΗ ΕΝΗΜΕΡΩΣΗ</div>
    </div>
</header>

<div id="alerts-container">
    <p style="text-align:center; padding:50px; color:var(--muted);">Φόρτωση επίσημων ανακοινώσεων...</p>
</div>

<script>
    // Σύνδεση με το επίσημο Feed της Δίωξης Ηλεκτρονικού Εγκλήματος
    const API_URL = "https://api.rss2json.com/v1/api.json?rss_url=https://www.cyberalert.gr/feed/";

    async function fetchAlerts() {
        try {
            const res = await fetch(API_URL);
            const data = await res.json();
            const container = document.getElementById('alerts-container');
            
            if (data.status === 'ok') {
                container.innerHTML = data.items.map(item => `
                    <div class="alert-card">
                        <span class="tag">ΕΠΕΙΓΟΝ</span>
                        <div class="alert-title">${item.title}</div>
                        <div class="alert-desc">${item.description.replace(/<[^>]*>?/gm, '').substring(0, 150)}...</div>
                        <a href="${item.link}" target="_blank" style="color:var(--accent); text-decoration:none; font-size:13px; display:block; margin-top:10px; font-weight:bold;">ΔΙΑΒΑΣΤΕ ΠΕΡΙΣΣΟΤΕΡΑ →</a>
                    </div>
                `).join('');
            }
        } catch (e) {
            document.getElementById('alerts-container').innerHTML = "<p style='text-align:center; padding:20px;'>Πρόβλημα στη φόρτωση. Δοκιμάστε ξανά.</p>";
        }
    }
    fetchAlerts();
</script>
</body>
</html>
