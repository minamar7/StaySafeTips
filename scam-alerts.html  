        :root { --danger: #ef4444; --bg: #020617; --card: #1e293b; --accent: #38bdf8; --gold: #facc15; }
        body { margin: 0; background: var(--bg); font-family: system-ui, sans-serif; color: #f8fafc; padding: 20px; }
        
        .header { text-align: center; margin-bottom: 25px; }
        .header h1 { color: var(--gold); font-size: 1.5rem; margin: 0; }
        .live-indicator { font-size: 0.7rem; color: var(--danger); font-weight: bold; text-transform: uppercase; letter-spacing: 1px; animation: blink 1.5s infinite; }
        @keyframes blink { 0% { opacity: 1; } 50% { opacity: 0.3; } 100% { opacity: 1; } }

        .back-btn { color: #64748b; text-decoration: none; font-size: 0.9rem; display: block; margin-bottom: 15px; }
        
        #alerts-container { display: grid; gap: 15px; }
        
        .alert-card { 
            background: var(--card); border-radius: 20px; padding: 18px; 
            border-left: 4px solid var(--danger); transition: 0.3s;
            animation: fadeIn 0.5s ease-out;
        }
        @keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }

        .alert-card h3 { margin: 0 0 8px; font-size: 1rem; color: var(--text); line-height: 1.3; }
        .alert-card p { margin: 0; font-size: 0.85rem; color: #94a3b8; line-height: 1.4; display: -webkit-box; -webkit-line-clamp: 3; -webkit-box-orient: vertical; overflow: hidden; }
        .alert-date { font-size: 0.7rem; color: var(--accent); margin-bottom: 5px; display: block; }
        .read-more { display: inline-block; margin-top: 10px; color: var(--gold); text-decoration: none; font-size: 0.8rem; font-weight: bold; }

