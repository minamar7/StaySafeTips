<body>
  <div class="app-shell">

    <header class="app-header">
      <div>
        <h1>ðŸ›‘ Scam Alerts</h1>
        <p class="sub">Realâ€‘time warnings for trending scams</p>
      </div>
    </header>

    <main class="app-screen active" id="alerts-container">
      <!-- Alerts injected dynamically -->
    </main>

    <button id="refresh-alerts-btn">Refresh Alerts</button>

  </div>

  <script>
    // Premium gate
    (function () {
      const isPremium = localStorage.getItem("premium") === "true";
      if (!isPremium) {
        window.location.href = "index.html#premium";
        return;
      }
    })();

    const alertsData = [
      {
        title: "Bank Verification SMS",
        bullets: [
          "Claims your account will be closed.",
          "Includes a link to a fake login page.",
          "Uses urgent language to force quick action."
        ],
        action: "Never tap links in SMS. Open your bank app directly."
      },
      {
        title: "Family Member in Trouble",
        bullets: [
          "Caller claims to be a relative in danger.",
          "Asks for immediate money transfer.",
          "May use AIâ€‘cloned voice."
        ],
        action: "Hang up and call your relative on a known number."
      },
      {
        title: "Fake Delivery Notice",
        bullets: [
          "Says a package is held at customs.",
          "Requests payment of a small fee.",
          "Links to phishing payment page."
        ],
        action: "Check only through official courier apps or websites."
      },
      {
        title: "Job Offer Scam",
        bullets: [
          "Unrealistic salary for minimal work.",
          "Requests upfront payment for training or equipment.",
          "No verifiable company details."
        ],
        action: "Verify the company via official website and LinkedIn."
      }
    ];

    const container = document.getElementById("alerts-container");
    const refreshBtn = document.getElementById("refresh-alerts-btn");

    function renderAlerts() {
      container.innerHTML = "";
      const shuffled = [...alertsData].sort(() => Math.random() - 0.5).slice(0, 3);

      shuffled.forEach(alert => {
        const div = document.createElement("div");
        div.className = "alert-block";

        const h3 = document.createElement("h3");
        h3.textContent = alert.title;
        div.appendChild(h3);

        const ul = document.createElement("ul");
        alert.bullets.forEach(b => {
          const li = document.createElement("li");
          li.textContent = b;
          ul.appendChild(li);
        });
        div.appendChild(ul);

        const p = document.createElement("p");
        p.textContent = "What to do: " + alert.action;
        div.appendChild(p);

        container.appendChild(div);
      });
    }

    refreshBtn.addEventListener("click", renderAlerts);
    renderAlerts();
  </script>

</body>
