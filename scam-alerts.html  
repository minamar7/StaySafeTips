    <meta charset="UTF-8">
    <title>Live Scam Alerts</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no, viewport-fit=cover">
    <style>
        :root { --bg: #020617; --card: rgba(15, 23, 42, 0.9); --accent: #38bdf8; --danger: #ef4444; --text: #f8fafc; --muted: #94a3b8; }
        body { margin: 0; background: var(--bg); color: var(--text); font-family: sans-serif; }
        .header { padding: 50px 20px 20px; background: rgba(15, 23, 42, 0.8); backdrop-filter: blur(20px); border-bottom: 1px solid rgba(239, 68, 68, 0.3); display: flex; align-items: center; gap: 15px; position: sticky; top: 0; z-index: 100; }
        .back-btn { background: rgba(56, 189, 248, 0.1); border: 1px solid var(--accent); color: var(--accent); padding: 8px 15px; border-radius: 12px; text-decoration: none; font-weight: bold; }
        .alert-card { background: var(--card); border-radius: 24px; padding: 20px; margin: 15px; border: 1px solid rgba(255,255,255,0.05); }
        .live-dot { height: 10px; width: 10px; background: var(--danger); border-radius: 50%; display: inline-block; animation: blink 1s infinite; box-shadow: 0 0 10px var(--danger); }
        @keyframes blink { 0%, 100% { opacity: 1; } 50% { opacity: 0.4; } }
        .alert-title { font-size: 18px; font-weight: bold; margin: 10px 0; color: #fff; }
        .alert-desc { font-size: 14px; color: var(--muted); line-height: 1.5; }
        .tag { background: rgba(239,68,68,0.1); color: var(--danger); padding: 4px 10px; border-radius: 8px; font-size: 10px; font-weight: bold; }
    </style>
