<script>
// Χρησιμοποιούμε το RSS feed της Δίωξης Ηλεκτρονικού Εγκλήματος μέσω Google API
const RSS_API = `https://api.rss2json.com/v1/api.json?rss_url=https://www.cyberalert.gr/feed/`;

async function loadAlerts() {
    const container = document.getElementById('alerts-container');
    
    try {
        const response = await fetch(RSS_API);
        const data = await response.json();
        
        if (data.status === 'ok') {
            container.innerHTML = data.items.map(item => {
                // Φιλτράρουμε την ημερομηνία
                const date = new Date(item.pubDate).toLocaleDateString('el-GR', {
                    day: 'numeric', month: 'long'
                });

                return `
                    <div class="alert-card">
                        <div style="display:flex; justify-content:space-between; align-items:center;">
                            <span class="alert-tag">SCAM REPORT</span>
                            <span class="alert-time">${date}</span>
                        </div>
                        <div class="alert-title">${item.title}</div>
                        <div class="alert-desc">
                            ${item.description.replace(/<[^>]*>?/gm, '').substring(0, 130)}...
                        </div>
                        <a href="${item.link}" target="_blank" class="read-more">
                            ΜΑΘΕΤΕ ΠΕΡΙΣΣΟΤΕΡΑ <span>→</span>
                        </a>
                    </div>
                `;
            }).join('');
        } else {
            throw new Error();
        }
    } catch (e) {
        container.innerHTML = `
            <div style="padding:40px; text-align:center; color:var(--muted);">
                <p>⚠️ Αδυναμία σύνδεσης με τη βάση δεδομένων.</p>
                <button onclick="location.reload()" class="back-btn" style="background:none;">Επαναδοκιμή</button>
            </div>
        `;
    }
}

// Φόρτωση μετά από 1 δευτερόλεπτο για να φανεί το εφέ
setTimeout(loadAlerts, 1000);
</script>
</body>
