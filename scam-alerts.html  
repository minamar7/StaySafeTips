        :root { --danger: #ef4444; --bg: #020617; --card: #1e293b; --accent: #38bdf8; --gold: #facc15; }
        body { margin: 0; background: var(--bg); font-family: system-ui, sans-serif; color: #f8fafc; padding: 20px; }
        
        .header { text-align: center; margin-bottom: 25px; }
        .live-dot { width: 8px; height: 8px; background: var(--danger); border-radius: 50%; display: inline-block; margin-right: 5px; animation: blink 1s infinite; }
        @keyframes blink { 0% { opacity: 1; } 50% { opacity: 0.2; } 100% { opacity: 1; } }

        .back-link { color: var(--muted); text-decoration: none; font-size: 0.9rem; margin-bottom: 20px; display: block; }
        
        .alert-card { 
            background: var(--card); border-radius: 20px; padding: 18px; 
            margin-bottom: 15px; border-left: 4px solid var(--danger);
            box-shadow: 0 10px 20px rgba(0,0,0,0.2);
        }
        .alert-card span { color: var(--accent); font-size: 0.7rem; font-weight: bold; text-transform: uppercase; }
        .alert-card h3 { margin: 5px 0; font-size: 1rem; color: var(--gold); }
        .alert-card p { margin: 0; font-size: 0.85rem; color: #cbd5e1; line-height: 1.4; }
        
