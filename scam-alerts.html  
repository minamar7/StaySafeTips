<body>

    <a href="index.html" class="back-btn">← Επιστροφή</a>
    <header class="header">
        <div class="live-indicator">● LIVE SCAM FEED</div>
        <h1>Global Scam Alerts</h1>
        <p style="font-size: 0.8rem; color: #94a3b8;">Διεθνής ενημέρωση για νέες απάτες</p>
    </header>

    <div id="loader" class="loader">ΦΟΡΤΩΣΗ ΠΡΟΣΦΑΤΩΝ ΑΠΕΙΛΩΝ...</div>
    <div id="alerts-container"></div>

<script>
    // Έλεγχος Premium
    if(localStorage.getItem('isElite') !== 'true') {
        alert("Απαιτείται Elite Membership!");
        window.location.href = 'index.html';
    }

    async function fetchScams() {
        // Χρησιμοποιούμε το RSS feed της FTC (Consumer Alerts)
        const rssUrl = 'https://www.consumer.ftc.gov/blog/feed';
        const apiUrl = `https://api.rss2json.com/v1/api.json?rss_url=${encodeURIComponent(rssUrl)}`;

        try {
            const response = await fetch(apiUrl);
            const data = await response.json();
            
            document.getElementById('loader').style.display = 'none';
            const container = document.getElementById('alerts-container');

            data.items.forEach(item => {
                const card = document.createElement('div');
                card.className = 'alert-card';
                
                // Format ημερομηνίας
                const date = new Date(item.pubDate).toLocaleDateString('el-GR');

                card.innerHTML = `
                    <span class="alert-date">${date}</span>
                    <h3>${item.title}</h3>
                    <p>${item.description.replace(/<[^>]*>?/gm, '')}</p>
                    <a href="${item.link}" target="_blank" class="read-more">ΔΙΑΒΑΣΕ ΠΕΡΙΣΣΟΤΕΡΑ →</a>
                `;
                container.appendChild(card);
            });
        } catch (error) {
            document.getElementById('loader').innerText = "Σφάλμα κατά τη φόρτωση. Δοκιμάστε ξανά.";
        }
    }

    fetchScams();
</script>

</body>
