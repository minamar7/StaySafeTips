<body>

    <a href="index.html" class="back-link">← Πίσω στο Dashboard</a>

    <header class="header">
        <div><span class="live-dot"></span> <span style="font-size: 0.8rem; font-weight: bold; color: var(--danger);">LIVE SCAM TRACKER</span></div>
        <h1>Scam Alerts</h1>
        <p style="color: #94a3b8; font-size: 0.8rem;">Παγκόσμια ενημέρωση για νέες απειλές</p>
    </header>

    <div id="feed-container">
        <div class="loader">Αναζήτηση για πρόσφατες απάτες...</div>
    </div>

<script>
    // Έλεγχος αν ο χρήστης είναι Elite
    if(localStorage.getItem('isElite') !== 'true') {
        window.location.href = 'index.html';
    }

    async function loadScams() {
        // Χρησιμοποιούμε το feed της FTC (Federal Trade Commission)
        const rssUrl = 'https://www.consumer.ftc.gov/blog/feed';
        const apiUrl = `https://api.rss2json.com/v1/api.json?rss_url=${encodeURIComponent(rssUrl)}`;

        try {
            const response = await fetch(apiUrl);
            const data = await response.json();
            const container = document.getElementById('feed-container');
            container.innerHTML = '';

            data.items.slice(0, 8).forEach(item => {
                const card = document.createElement('div');
                card.className = 'alert-card';
                card.innerHTML = `
                    <span>ΝΕΑ ΑΠΕΙΛΗ • ${new Date(item.pubDate).toLocaleDateString('el-GR')}</span>
                    <h3>${item.title}</h3>
                    <p>${item.description.substring(0, 120).replace(/<[^>]*>?/gm, '')}...</p>
                    <a href="${item.link}" target="_blank" style="color:var(--accent); font-size:0.75rem; text-decoration:none; display:block; margin-top:10px; font-weight:bold;">ΠΩΣ ΝΑ ΠΡΟΣΤΑΤΕΥΤΕΙΤΕ →</a>
                `;
                container.appendChild(card);
            });
        } catch (e) {
            document.getElementById('feed-container').innerHTML = "Αποτυχία σύνδεσης στο Live Feed.";
        }
    }

    loadScams();
</script>

</body>
