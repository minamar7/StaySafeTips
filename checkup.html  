  <script>
    // Premium gate
    (function () {
      const isPremium = localStorage.getItem("premium") === "true";
      if (!isPremium) {
        window.location.href = "index.html#premium";
        return;
      }
    })();

    const pwStrength = document.getElementById("pw-strength");
    const twofaStatus = document.getElementById("twofa-status");
    const riskScore = document.getElementById("risk-score");
    const runBtn = document.getElementById("run-checkup-btn");

    runBtn.addEventListener("click", () => {
      runBtn.disabled = true;
      runBtn.textContent = "Running checkup‚Ä¶";

      setTimeout(() => {
        pwStrength.textContent = "Status: Medium ‚Äî improve password length & variety";
        twofaStatus.textContent = "Status: Recommended ‚Äî enable 2FA on email & banking";
        riskScore.textContent = "Risk level: Moderate ‚Äî a few improvements needed";

        runBtn.disabled = false;
        runBtn.textContent = "Run Full Checkup Again";
      }, 1200);
    });
  </script>

