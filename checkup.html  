<body>

    <div class="scanner-box" id="scanner-interface">
        <div class="scan-bar" id="scan-bar"></div>
        <h2 id="status-title" style="letter-spacing: 2px; color: var(--accent);">CORE AUDIT</h2>
        
        <div class="log-container" id="log-box"></div>
    </div>

    <div id="final-report" class="hidden">
        <div style="background: var(--card); padding: 30px; border-radius: 28px; border: 1px solid var(--gold); margin-top: 20px; text-align: center;">
            <h2 style="color: var(--gold); margin-top: 0;">AUDIT COMPLETE</h2>
            <p id="result-summary" style="color: var(--muted); font-size: 0.95rem;"></p>
            <button class="main-cta" onclick="location.href='index.html'">RETURN TO COMMAND</button>
        </div>
    </div>

    <script>
        const logBox = document.getElementById('log-box');
        
        // Πραγματικά δεδομένα από τον Browser
        async function getBattery() {
            try {
                const battery = await navigator.getBattery();
                return Math.round(battery.level * 100) + "%";
            } catch(e) { return "STABLE"; }
        }

        const auditSteps = [
            { msg: "Establishing secure link...", result: "OK" },
            { msg: "Network integrity check...", result: () => navigator.onLine ? "SECURE" : "OFFLINE" },
            { msg: "Scanning device platform...", result: () => navigator.platform.substring(0,10) },
            { msg: "Battery safety voltage...", result: "pending" }, // Θα το αλλάξουμε δυναμικά
            { msg: "User defense level...", result: () => "LVL " + (localStorage.getItem('xp') ? Math.floor(localStorage.getItem('xp')/100)+1 : 1) },
            { msg: "Premium encryption...", result: () => localStorage.getItem('isPremiumUser') === 'true' ? "ENABLED" : "STANDARD" },
            { msg: "Finalizing security report...", result: "SUCCESS" }
        ];

        async function runAudit() {
            // Φορτώνουμε την μπαταρία πριν ξεκινήσουμε
            const batStatus = await getBattery();
            auditSteps[3].result = batStatus;

            for (let step of auditSteps) {
                await new Promise(r => setTimeout(r, 800)); // Ρυθμός σάρωσης
                
                const entry = document.createElement('div');
                entry.className = 'log-entry';
                const res = typeof step.result === 'function' ? step.result() : step.result;
                
                entry.innerHTML = `<span style="color:var(--muted)">></span> ${step.msg} <span style="color:#fff; font-weight:bold;">${res}</span>`;
                logBox.appendChild(entry);
                logBox.scrollTop = logBox.scrollHeight;
            }

            setTimeout(showResults, 1000);
        }

        function showResults() {
            document.getElementById('scan-bar').style.display = 'none';
            document.getElementById('status-title').innerText = "SYSTEM SECURE";
            document.getElementById('status-title').style.color = "var(--success)";
            
            const report = document.getElementById('final-report');
            const summary = document.getElementById('result-summary');
            
            report.classList.remove('hidden');
            summary.innerText = "All core systems are operational. Your defense level is synchronized with the latest Stay Safe Elite protocols.";
            
            confetti({ particleCount: 150, spread: 70, origin: { y: 0.7 }, colors: ['#38bdf8', '#facc15'] });
        }

        window.onload = runAudit;
    </script>
</body>
