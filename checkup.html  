    <style>
        :root { --bg: #020617; --card: rgba(15, 23, 42, 0.9); --accent: #38bdf8; --gold: #facc15; --text: #f8fafc; --muted: #94a3b8; --danger: #ef4444; --success: #22c55e; }
        body { margin: 0; background: var(--bg); color: var(--text); font-family: -apple-system, system-ui, sans-serif; padding: 20px; }
        
        .scanner-box {
            position: relative;
            padding: 40px 20px;
            background: linear-gradient(180deg, rgba(15, 23, 42, 0.9) 0%, #020617 100%);
            border: 2px solid var(--accent);
            border-radius: 28px;
            text-align: center;
            overflow: hidden;
            box-shadow: 0 0 30px rgba(56, 189, 248, 0.2);
        }

        .scan-bar {
            position: absolute;
            left: 0; width: 100%; height: 4px;
            background: var(--accent);
            box-shadow: 0 0 20px var(--accent);
            z-index: 5;
            animation: scanning 3s linear infinite;
        }

        @keyframes scanning {
            0% { top: 0; }
            50% { top: 100%; }
            100% { top: 0; }
        }

        .log-container {
            height: 160px;
            font-family: 'Courier New', monospace;
            font-size: 0.85rem;
