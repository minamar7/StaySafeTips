<script>
function startScan() {
  const btn = document.getElementById('btn-run');
  const fill = document.getElementById('p-fill');
  const box = document.getElementById('p-box');
  const pStatus = document.getElementById('p-status');
  
  btn.disabled = true;
  btn.innerText = "SCANNING SYSTEM...";
  box.style.display = "block";
  
  let progress = 0;
  const steps = [
    "Checking encrypted vaults...",
    "Analyzing password entropy...",
    "Scanning for leaked credentials...",
    "Testing 2FA endpoints...",
    "Verifying OS signatures...",
    "Finalizing report..."
  ];

  const interval = setInterval(() => {
    progress += Math.random() * 8;
    if (progress > 100) progress = 100;
    
    fill.style.width = progress + "%";
    pStatus.innerText = steps[Math.floor((progress/101) * steps.length)];

    if (progress === 100) {
      clearInterval(interval);
      showResults();
    }
  }, 150);
}

function showResults() {
  const btn = document.getElementById('btn-run');
  const score = Math.floor(72 + Math.random() * 20);
  
  document.getElementById('txt-score').innerHTML = `Score: <span class="${score > 85 ? 'val-safe' : 'val-warning'}">${score}/100</span>`;
  document.getElementById('txt-pw').innerHTML = `Status: <span class="val-warning">Medium Risk</span> (Weak repeats found)`;
  document.getElementById('txt-2fa').innerHTML = `Status: <span class="val-danger">Incomplete</span> (Enable on Gmail/Social)`;
  document.getElementById('txt_risk').innerHTML = `Risk Level: <span class="val-safe">Low</span> (Good hygiene)`;
  
  btn.disabled = false;
  btn.innerText = "RE-RUN CHECKUP";
  document.getElementById('p-box').style.display = "none";
  
  if (navigator.vibrate) navigator.vibrate([100, 50, 100]);
}
</script>
