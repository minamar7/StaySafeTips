    <script>
        function startDrill() {
            document.getElementById('instruction').innerText = "LOOK NOW!";
            document.getElementById('target-box').style.display = 'block';
            document.getElementById('controls').style.visibility = 'hidden';
            
            const timer = document.getElementById('timer');
            timer.style.transition = "3s linear";
            timer.style.width = "0%";

            setTimeout(() => {
                if(timer.style.width === "0%") {
                    fail();
                }
            }, 3000);
        }

        function success() {
            playKiai();
            alert("üéØ THREAT DETECTED! Excellent reflexes, Master.");
            location.reload();
        }

        function fail() {
            alert("‚ùå TOO SLOW! In a real situation, speed is survival.");
            location.reload();
        }

        function playKiai() {
            new Audio('https://www.soundjay.com/human/sounds/human-shout-01.mp3').play();
        }
    </script>
