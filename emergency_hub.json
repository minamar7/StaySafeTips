async function openSOS() {
    if (!isPremium) { 
        nav('premium'); 
        return; 
    }
    try {
        const res = await fetch('./emergency_hub.json');
        const data = await res.json();
        
        let html = `
        <div class="glass-card" style="text-align:left; max-height:80vh; overflow-y:auto; padding:15px; border: 1px solid rgba(239, 68, 68, 0.3);">
            <h2 style="color:var(--danger); font-size:22px; margin:0 0 15px 0; text-align:center;">üåç Global SOS Hub</h2>
            
            <div style="background:rgba(239,68,68,0.08); padding:15px; border-radius:18px; text-align:center; border:1px solid rgba(239,68,68,0.2); margin-bottom:20px;">
                <span style="font-size:12px; color:var(--muted); text-transform:uppercase;">${data.global_standard.title}</span>
                <div style="font-size:32px; font-weight:800; color:var(--text); margin:5px 0;">${data.global_standard.number}</div>
                <small style="display:block; font-size:11px; color:var(--muted); opacity:0.8;">${data.global_standard.note}</small>
            </div>`;

        data.regions.forEach(r => {
            html += `<h3 style="color:var(--accent); font-size:16px; margin:20px 0 10px 5px; text-transform:uppercase; letter-spacing:1px;">${r.area}</h3>`;
            
            r.countries.forEach(c => {
                html += `
                <div style="background:rgba(255,255,255,0.03); padding:12px; border-radius:16px; margin-bottom:8px; border:1px solid rgba(255,255,255,0.05); display:flex; align-items:center; justify-content:space-between;">
                    <div style="flex:1; font-size:14px; font-weight:600; color:var(--gold);">${c.name}</div>
                    <div style="display:flex; gap:12px;">
                        <div style="text-align:center;">
                            <span style="font-size:10px; color:var(--muted); display:block;">POLICE</span>
                            <span style="font-size:14px; font-weight:800;">${c.police}</span>
                        </div>
                        <div style="text-align:center; border-left:1px solid rgba(255,255,255,0.1); padding-left:10px;">
                            <span style="font-size:10px; color:var(--muted); display:block;">MED</span>
                            <span style="font-size:14px; font-weight:800;">${c.medical}</span>
                        </div>
                        <div style="text-align:center; border-left:1px solid rgba(255,255,255,0.1); padding-left:10px;">
                            <span style="font-size:10px; color:var(--muted); display:block;">FIRE</span>
                            <span style="font-size:14px; font-weight:800;">${c.fire}</span>
                        </div>
                    </div>
                </div>`;
            });
        });

        html += `
            <button class="main-cta" style="margin-top:20px; height:55px; font-size:15px;" onclick="nav('home')">ŒïŒ†ŒôŒ£Œ§Œ°ŒüŒ¶Œó</button>
        </div>`;

        document.getElementById('screen_quiz').innerHTML = html;
        nav('quiz');
    } catch (e) { 
        alert("JSON Error: Check your emergency_hub.json file."); 
    }

